@model ESF.Core.Services.TeamCreateModel

@{
    ViewBag.Title = "SportEventCreateNewTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sport Event Create New Team</h2>

@ViewBag.TeamCreateMessage

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create New Team</legend>

        @Html.HiddenFor(model => model.CaptainSportEventParticipantId)

        <div class="editor-label">
            @Html.LabelFor(model => model.TeamName, "Team Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeamName)
            @Html.ValidationMessageFor(model => model.TeamName)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}