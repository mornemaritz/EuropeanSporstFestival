@model ESF.Core.Services.NewTeamMemberModel

@{
    ViewBag.Title = "Add Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Team Member</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>NewTeamMemberModel</legend>

		@Html.HiddenFor(x => x.SportEventTeamId)

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName, "First Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName, "Last Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddress, "Email Address")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <p>
            <input type="submit" value="Add New Team Member" />
        </p>
		@Html.ActionLink("Cancel","ManageTeam",new {sportEventTeamId = Model.SportEventTeamId})
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
